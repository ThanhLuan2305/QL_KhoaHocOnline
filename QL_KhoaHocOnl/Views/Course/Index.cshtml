@model IEnumerable<QL_KhoaHocOnl.Models.COURSE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="all-title-box">
    <div class="container text-center">
        <h1>Course Grid 3<span class="m_1">Lorem Ipsum dolroin gravida nibh vel velit.</span></h1>
    </div>
</div>
<div id="overviews" class="section wb">
    <div class="container">
        <div class="section-title row text-center">
            <div class="col-md-8 offset-md-2">
                <p class="lead">Lorem Ipsum dolroin gravida nibh vel velit auctor aliquet. Aenean sollicitudin, lorem quis bibendum auctor, nisi elit consequat ipsum, nec sagittis sem!</p>
            </div>
        </div><!-- end title -->
        <div>
        </div>
        <div class="sort mb-2">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Sắp xếp
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item course-title" style="color:black !important"  href="/course/index?Sort=Up">Giá tăng dần</a></li>
                    <li><a class="dropdown-item course-title" style="color:black !important" href="/course/index?Sort=Down">Giá giẩm dần</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-12 mb-4">
                    <div class="course-item">
                        <div class="image-blog">
                            @*@Html.DisplayFor(modelItem => item.THUMBNAIL)*@
                            <img src="~/Assets/images/blog_1.jpg" alt="" class="img-fluid">
                        </div>
                        <div class="course-br ">
                            <div class="course-title">
                                <h2>
                                    @Html.ActionLink(item.NAME_COURSE, "Detail", new { id = item.ID_COURSE })
                                </h2>
                            </div>
                            <div class="course-desc">
                                @if (item.DESCRIPTION_COURSE.Length > 90)
                                {
                                    <p>@item.DESCRIPTION_COURSE.Substring(0, 88)...</p>
                                }
                                else
                                {
                                    <p>@item.DESCRIPTION_COURSE</p>
                                }
                            </div>
                        </div>
                        <div class="course-meta-bot">
                            <p class="text align-content-center">@Html.DisplayFor(modelItem => item.PRICE_COURSE) VND</p>
                        </div>
                    </div>
                </div><!-- end col -->
            }
        </div><!-- end row -->
        <div style="width:50%; margin:20px auto;text-align:center">
            @{
                int PrevPage = ViewBag.Page - 1;
                if (PrevPage <= 0)
                {
                    PrevPage = 1;
                }
                int NextPage = ViewBag.Page + 1;
                if (NextPage > ViewBag.NoOfPages)
                {
                    NextPage = ViewBag.NoOfPages;
                }
            }
            <ul class="pagination justify-content-center align-items-center">
                <li class="page-item">
                    <a class="page-link" href="/course/index?Sort=@ViewBag.Sort&page=@PrevPage">
                        «
                    </a>
                </li>
                @for (int i = 0; i < ViewBag.NoOfPages; i++)
                {
                    if (i + 1 == ViewBag.Page)
                    {
                        <li class="page-item active">
                            <a class="page-link" href="/course/index?Sort=@ViewBag.Sort&page=@(i+1)">
                                @(i+1)
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="/course/index?Sort=@ViewBag.Sort&page=@(i+1)">
                                @(i+1)
                            </a>
                        </li>
                    }

                }
                <li class="page-item">
                    <a class="page-link" href="/course/index?Sort=@ViewBag.Sort&page=@NextPage">
                        »
                    </a>
                </li>
            </ul>
        </div>
        @*@Html.DisplayFor(modelItem => item.DESCRIPTION_COURSE)
        @Html.DisplayFor(modelItem => item.STATUS_COURSE)
        @Html.DisplayFor(modelItem => item.THUMBNAIL)
        @Html.DisplayFor(modelItem => item.COUNT_LESSON_COURSE)
        @Html.DisplayFor(modelItem => item.LEVEL_COURSE)
        @Html.DisplayFor(modelItem => item.CREATED_AT_COURSE)
        @Html.DisplayFor(modelItem => item.UPDATE_AT_COURSE)*@
    </div><!-- end container -->
</div><!-- end section -->